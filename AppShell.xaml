<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WGUMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WGUMauiApp"
    Shell.TabBarTitleColor="#7C838F"
    Shell.TabBarUnselectedColor="#7C838F"
    Shell.TabBarForegroundColor="#4A5468"
    Title="WGUMauiApp">

    <TabBar>
        <Tab Title="Courses" Icon="category_alt.png">
            <ShellContent
                Title="Courses"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Terms" Icon="category_alt.png">
            <ShellContent
                Title="Terms"
                ContentTemplate="{DataTemplate local:TermPage}"
                Route="TermPage" />
        </Tab>
        <Tab Title="More" Icon="category_alt.png">
            <ShellContent
                Title="More"
                ContentTemplate="{DataTemplate local:MorePage}"
                Route="MorePage" />
        </Tab>
    </TabBar>

    

</Shell>
