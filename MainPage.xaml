<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Home Page"
             x:Class="WGUMauiApp.MainPage">
    <ScrollView>
        <StackLayout>
            <toolkit:Expander
                Margin="10,10,10,10"
                IsExpanded="True">
                <toolkit:Expander.Header>
                    <Border BackgroundColor="White"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            Padding="16,12">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="1"/>
                        </Border.StrokeShape>

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="ACTIVE COURSES"
                                   FontAttributes="Bold"
                                   FontSize="Medium"
                                   VerticalOptions="Center"/>

                            <Image Grid.Column="1"
                                   Source="down_arrow.png"/>
                        </Grid>
                    </Border>
                </toolkit:Expander.Header>
                <CollectionView x:Name="activeCollectionView" Margin="10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="#F7FAFC" 
                                    Stroke="#E2E8F0"
                                    StrokeThickness="1"
                                    Margin="0,2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="5"/>
                                </Border.StrokeShape>
                                <StackLayout Grid.Column="0" Margin="10">
                                        <Label Text="{Binding Title}" 
                                            FontSize="20" 
                                            FontAttributes="Bold"
                                            TextColor="#2D3748" />
                                        <Label Text="{Binding StartDate, StringFormat='Start: {0:MM/dd/yyyy}'}" 
                                            FontSize="16" 
                                            TextColor="#2D3748" />
                                        <Label Text="{Binding EndDate, StringFormat='End: {0:MM/dd/yyyy}'}" 
                                            FontSize="16" 
                                            TextColor="#2D3748" />
                                    <Button Text="VIEW COURSE"
                                            Margin="10"
                                            BackgroundColor="#4A5568"
                                            TextColor="White"
                                            FontSize="18"
                                            Padding="8,4"
                                            CornerRadius="4"
                                            VerticalOptions="Center"
                                            Clicked="ViewCourseButton_Clicked">
                                    </Button>
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label Text="No courses added yet" 
                                FontSize="14" 
                                TextColor="#A0AEC0" 
                                Margin="0,5,0,0"
                                HorizontalOptions="Start" />
                    </CollectionView.EmptyView>
                </CollectionView>
            </toolkit:Expander>
        
            <toolkit:Expander
                Margin="10,10,10,10"
                IsExpanded="False">
                <toolkit:Expander.Header>
                    <Border BackgroundColor="White"
                    Stroke="#E0E0E0"
                    StrokeThickness="1"
                    Padding="16,12">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="1"/>
                        </Border.StrokeShape>

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                           Text="UPCOMING COURSES"
                           FontAttributes="Bold"
                           FontSize="Medium"
                           VerticalOptions="Center"/>

                            <Image Grid.Column="1"
                           Source="down_arrow.png"/>
                        </Grid>
                    </Border>
                </toolkit:Expander.Header>
                <CollectionView x:Name="upcomingCollectionView" Margin="10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="#F7FAFC" 
                            Stroke="#E2E8F0"
                            StrokeThickness="1"
                            Margin="0,2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="5"/>
                                </Border.StrokeShape>
                                <StackLayout Grid.Column="0" Margin="10">
                                    <Label Text="{Binding Title}" 
                                    FontSize="20" 
                                    FontAttributes="Bold"
                                    TextColor="#2D3748" />
                                    <Label Text="{Binding StartDate, StringFormat='Start: {0:MM/dd/yyyy}'}" 
                                    FontSize="16" 
                                    TextColor="#2D3748" />
                                    <Label Text="{Binding EndDate, StringFormat='End: {0:MM/dd/yyyy}'}" 
                                    FontSize="16" 
                                    TextColor="#2D3748" />
                                    <Button Text="VIEW COURSE"
                                            Margin="10"
                                            BackgroundColor="#4A5568"
                                            TextColor="White"
                                            FontSize="18"
                                            Padding="8,4"
                                            CornerRadius="4"
                                            VerticalOptions="Center"
                                            Clicked="ViewCourseButton_Clicked">
                                    </Button>
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label Text="No courses added yet" 
                        FontSize="14" 
                        TextColor="#A0AEC0" 
                        Margin="0,5,0,0"
                        HorizontalOptions="Start" />
                    </CollectionView.EmptyView>
                </CollectionView>
            </toolkit:Expander>
            <toolkit:Expander
                Margin="10,10,10,10"
                IsExpanded="False">
                <toolkit:Expander.Header>
                    <Border BackgroundColor="White"
                        Stroke="#E0E0E0"
                        StrokeThickness="1"
                        Padding="16,12">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="1"/>
                        </Border.StrokeShape>

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                               Text="COMPLETED COURSES"
                               FontAttributes="Bold"
                               FontSize="Medium"
                               VerticalOptions="Center"/>

                            <Image Grid.Column="1"
                                Source="down_arrow.png"/>
                        </Grid>
                    </Border>
                </toolkit:Expander.Header>
                <CollectionView x:Name="completedCollectionView" Margin="10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="#F7FAFC" 
                                Stroke="#E2E8F0"
                                StrokeThickness="1"
                                Margin="0,2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="5"/>
                                </Border.StrokeShape>
                                <StackLayout Grid.Column="0" Margin="10">
                                    <Label Text="{Binding Title}" 
                                    FontSize="20" 
                                    FontAttributes="Bold"
                                    TextColor="#2D3748" />
                                    <Label Text="{Binding StartDate, StringFormat='Start: {0:MM/dd/yyyy}'}" 
                                        FontSize="16" 
                                        TextColor="#2D3748" />
                                    <Label Text="{Binding EndDate, StringFormat='End: {0:MM/dd/yyyy}'}" 
                                        FontSize="16" 
                                        TextColor="#2D3748" />
                                    <Button Text="VIEW COURSE"
                                            Margin="10"
                                            BackgroundColor="#4A5568"
                                            TextColor="White"
                                            FontSize="18"
                                            Padding="8,4"
                                            CornerRadius="4"
                                            VerticalOptions="Center"
                                            Clicked="ViewCourseButton_Clicked">
                                    </Button>
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label Text="No courses added yet" 
                            FontSize="14" 
                            TextColor="#A0AEC0" 
                            Margin="0,5,0,0"
                            HorizontalOptions="Start" />
                    </CollectionView.EmptyView>
                </CollectionView>
            </toolkit:Expander>
        </StackLayout>
    </ScrollView>

</ContentPage>
